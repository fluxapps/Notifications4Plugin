{
  "name": "srag/notifications4plugin",
  "description": "This library offers a quick and easy way to create and send notifications in any language. The notifications are usually configured in the config screen of Notifications4Plugin and can then be sent for instance as an email by other plugins dynamic",
  "version": "5.6.4",
  "extra": {
    "ilias_plugin": {
      "ilias_min_version": "5.4.0",
      "ilias_max_version": "6.999"
    },
    "generate_plugin_readme_template": "SRAG_ILIAS_LIBRARY",
    "long_description_template": "src/LONG_DESCRIPTION.md"
  },
  "type": "library",
  "keywords": [
    "ilias",
    "notifications"
  ],
  "homepage": "https://github.com/fluxfw/Notifications4Plugin",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "studer + raimann ag - Team Custom 1",
      "email": "support-custom1@studer-raimann.ch",
      "homepage": "https://studer-raimann.ch",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://plugins.studer-raimann.ch/goto.php?target=uihk_srsu_PLNOTIFICATION"
  },
  "require": {
    "php": ">=7.2",
    "srag/custominputguis": ">=0.1.0",
    "srag/datatable": ">=0.1.0",
    "srag/dic": ">=0.1.0",
    "srag/librarylanguageinstaller": ">=0.1.0",
    "twig/twig": "1.18.0"
  },
  "require-dev": {
    "srag/generateplugininfoshelper": ">=0.1.0"
  },
  "autoload": {
    "psr-4": {
      "srag\\Notifications4Plugin\\": "src/"
    },
    "classmap": [
      "src/Notification/class.NotificationsCtrl.php",
      "src/Notification/class.NotificationCtrl.php"
    ]
  },
  "config": {
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "generate-plugin-readme": [
      "srag\\GeneratePluginInfosHelper\\GeneratePluginReadme::generatePluginReadme"
    ]
  }
}